{
    "name": "webappdev2-assignment-api",
    "version": "1.0.0",
    "description": "API",
    "main": "index.js",
    "scripts": {
        "lint": "eslint ./src --fix",
        "start": "npm run lint && nodemon --exec babel-node src/index.js"
    },
    "author": "Dylan Gore",
    "license": "ISC",
    "dependencies": {
        "cors": "^2.8.5",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "express-async-handler": "^1.1.4"
    },
    "devDependencies": {
        "@babel/cli": "^7.7.4",
        "@babel/core": "^7.7.4",
        "@babel/node": "^7.7.4",
        "@babel/preset-env": "^7.7.4",
        "babel-eslint": "^10.0.3",
        "body-parser": "^1.19.0",
        "eslint": "^6.7.0",
        "eslint-config-prettier": "^6.7.0",
        "eslint-plugin-babel": "^5.3.0",
        "eslint-plugin-prettier": "^3.1.1",
        "mongoose": "^5.7.12",
        "nodemon": "^2.0.1",
        "prettier": "^1.19.1"
    },
    "babel": {
        "presets": [
            "@babel/preset-env"
        ]
    },
    "eslintConfig": {
        "env": {
            "es6": true,
            "node": true
        },
        "extends": [
            "eslint:recommended",
            "prettier"
        ],
        "plugins": [
            "prettier",
            "babel"
        ],
        "globals": {
            "Atomics": "readonly",
            "SharedArrayBuffer": "readonly"
        },
        "parserOptions": {
            "ecmaVersion": 2018,
            "sourceType": "module"
        },
        "rules": {
            "prettier/prettier": "error"
        }
    },
    "prettier": {
        "singleQuote": true,
        "tabWidth": 4,
        "printWidth": 150
    }
}
